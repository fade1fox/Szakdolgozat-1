<!DOCTYPE html>
<html lang="en">


	{% include 'links.html.twig' %}


	<body
		class="theme-color2 light ltr">

		<!-- header start -->

		{% include 'header.html.twig' %}

		<!-- header end -->

		<!-- mobile fix menu start -->

		<!-- mobile fix menu end -->

		<!-- Breadcrumb section start -->
			<section class="breadcrumb-section section-b-space"> <ul class="circles">
				<li></li>
				<li></li>
				<li></li>
				<li></li>
				<li></li>
				<li></li>
				<li></li>
				<li></li>
				<li></li>
				<li></li>
			</ul>
			<div class="container">
				<div class="row">
					<div class="col-12">
						<h3>Fiókom</h3>
						<nav>
							<ol class="breadcrumb">
								<li class="breadcrumb-item">
									<a href="index.html">
										<i class="fas fa-home"></i>
									</a>
								</li>
								<li class="breadcrumb-item active" aria-current="page">Fiók adatok</li>
							</ol>
						</nav>
					</div>
				</div>
			</div>
		</section>
		<!-- Breadcrumb section end -->

		<!-- user dashboard section start -->
		<section class="section-b-space">
			<div class="container">
				<div class="row">
					<div class="col-lg-3">
						<ul class="nav nav-tabs custome-nav-tabs flex-column category-option" id="myTab">
							<li class="nav-item mb-2">
								<button class="nav-link font-light active" id="tab" data-bs-toggle="tab" data-bs-target="#dash" type="button">
									<i class="fas fa-angle-right"></i>Áttekintés</button>
							</li>

							<li class="nav-item mb-2">
								<button class="nav-link font-light" id="1-tab" data-bs-toggle="tab" data-bs-target="#order" type="button">
									<i class="fas fa-angle-right"></i>Rendelések</button>
							</li>


							<li class="nav-item mb-2">
								<button class="nav-link font-light" id="3-tab" data-bs-toggle="tab" data-bs-target="#save" type="button">
									<i class="fas fa-angle-right"></i>Szállítási cím</button>
							</li>


							<li class="nav-item">
								<button class="nav-link font-light" id="6-tab" data-bs-toggle="tab" data-bs-target="#security" type="button">
									<i class="fas fa-angle-right"></i>Fiók törlése</button>
							</li>
						</ul>
					</div>

					<div class="col-lg-9">
						<div class="filter-button dash-filter dashboard">
							<button class="btn btn-solid-default btn-sm fw-bold filter-btn">Menü</button>
						</div>

						<div class="tab-content" id="myTabContent">
							<div class="tab-pane fade show active" id="dash">
								<div class="dashboard-right">
									<div class="dashboard">
										<div class="page-title title title1 title-effect">
											<h2>Fiók kezelése</h2>
										</div>
										{% for profil in profilData %}
											<div class="welcome-msg">

												<h6 class="font-light">Hello,
													<span>{{profil.nev}}</span>
												</h6>
												<p class="font-light">A fiók irányítópultján lehetősége van a rendelések
																																																																																																																																																																																																																																megtekintésére és frissítheti fiókja adatait.
												</p>

											</div>
										{% endfor %}

										<div class="order-box-contain my-4">
											<div class="row g-4">
												<div class="col-lg-12 col-sm-6">
													<div class="order-box">
														<div class="order-box-image">
															<img src="/App/Public/template/front-end/assets/images/svg/box.png" class="img-fluid blur-up lazyload" alt="">
														</div>
														<div class="order-box-contain">
															<img src="/App/Public/template/front-end/assets/images/svg/box1.png" class="img-fluid blur-up lazyload" alt="">
															<div></div>
														</div>
													</div>
												</div>


											</div>

										</div>


										<div class="box-account box-info">
											<div class="box-head">
												<h3>Fiókom adatai</h3>
											</div>
											<div class="row">
												<div class="col-sm-12">
													<div class="box">
														<div class="box-title">
															<h4>Elérhetőségek</h4>


														</div>


														<div class="box-content">
															{% for profil in profilData %}
																<h6 class="font-light">{{profil.nev}}</h6>
																<h6 class="font-light">{{profil.email}}</h6>
																<h6 class="font-light">{{profil.telefonszam}}</h6>


															</div>
														</div>
													</div>

												</div>
												<div>
													<div class="box address-box">
														<div class="box-title">
															<h4>Szállítási cím</h4>

														</div>
														<div class="box-content">
															<div class="row g-4">
																<div class="col-sm-6">
																	<h6 class="font-light">{{profil.cim}}</h6>
																	<h6 class="font-light">{{profil.varosneve}}</h6>

																</div>

															{% endfor %}
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>

							<div class="tab-pane fade table-dashboard dashboard wish-list-section" id="order">
								<div class="box-head mb-3">
									<h3>Rendeléseim</h3>
								</div>
								<div class="table-responsive">
									<table class="table cart-table">
										<thead>
											<tr class="table-head">
												<th scope="col"></th>
												<th scope="col">Rendelés azonosító</th>
												<th scope="col">Termékek</th>
												<th scope="col">Állapot</th>
												<th scope="col">Ár</th>

											</tr>
										</thead>
										<tbody>


											{% for order in ordersData %}

												<tr>
													<td>
														<a href="/allproduct">
															<img src="/App/Public/template/front-end/assets/images/logos/boropluglogo.jpg" class="blur-up lazyload" alt="">
														</a>
													</td>
													<td>
														<p class="m-0">{{order.id}}</p>
													</td>
													<td>
														<pre class="fs-6 m-0">{{order.termekek}}</pre>
													</td>
													<td>
														{% if order.allapot == "Kézbesített" %}
															<p class="success-button btn btn-sm">Kézbesített</p>

														{% elseif order.allapot == "Megrendelt" %}

															<p class="warning-button btn btn-sm">
																Megrendelt
															</p>
														{% else %}
															<p class="danger-button btn btn-sm">
																Törölt
															</p>
														{% endif %}
													</td>
													<td>
														<p class="theme-color fs-6">{{order.osszar}}</p>
													</td>

												</tr>


											{% endfor %}

										</tbody>
									</table>
								</div>
							</div>


							<div class="tab-pane fade dashboard" id="save">
								<div class="box-head">
									<h3>Szállítási cím</h3>
									<button class="btn btn-solid-default btn-sm fw-bold ms-auto" data-bs-toggle="modal" data-bs-target="#addAddress">
										<i class="fas"></i>
										Cím szerkezstése</button>
								</div>
								<div class="save-details-box">
									<div class="row g-3">

										<div class="col-xl-8 col-md-6">
											<div class="save-details">

												<div class="save-name">
													{% for adr in adress %}
														<h5>{{adr.nev}}</h5>
														<div class="save-position">
															<h6>Cím</h6>
														</div>
													</div>


													<div class="save-address">
														<p class="font-light">{{adr.cim}}</p>
														<p class="font-light">{{adr.varosneve}}</p>
														<p class="font-light">{{adr.iranyitoszam}}</p>
													</div>

													<div class="mobile">
														<p class="font-light mobile">{{adr.telefonszam}}</p>
													</div>

													<div class="button">
														<button class="btn btn-solid-default btn-sm fw-bold ms-auto" data-bs-toggle="modal" data-bs-target="#addAddress">
															<i class="fas"></i>
															Módosítás</button>

													</div>
												{% endfor %}
											</div>
										</div>
									</div>
								</div>
							</div>


							<div class="tab-pane fade dashboard-security dashboard" id="security">
								<div class="box-head">
									<h3>Fiók törlése</h3>
								</div>
								<div class="security-details">
									<h5 class="font-light mt-3">Hello,
										{% for profil in profilData %}
											<span>
												{{profil.nev}}</span>
										{% endfor %}
									</h5>
									<p class="font-light mt-1">Szomorúan halljuk hogy törölni szeretné a fiókját.
									</p>
								</div>

								<div class="security-details-1 mb-0">
									<div class="page-title">
										<h4 class="fw-bold">Figyelmeztetés</h4>
									</div>
									<p class="font-light">A fiók törlése végleges és nem állítható vissza, amennyiben törli a fiókját elveszti annak beállításáait és minden fiókhoz tartozó adatot ezután nem fog tudni többször bejelentkezni vagy regisztrálni a már használt adatokkal.

									</p>

									<p class="font-light mb-4">Amennyiben tudomásul vette és elfogadta a fentieket és továbbra is törölni szeretné a fiókját kattintson az alábbi gombra.</p>

									<button class="btn btn-solid-default btn-sm fw-bold rounded" data-bs-toggle="modal" data-bs-target="#deleteModal">Fiók törlése</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<!-- user dashboard section end -->


		<!-- footer start -->
		{% include 'footer.html.twig' %}

		<!-- footer end -->


		<!-- Add Address Modal Start -->
			<div class="modal fade add-address-modal" id="addAddress"> <div class="modal-dialog modal-dialog-centered">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
					</div>
					<div class="modal-body">
						<form action="/adressEdit" method="POST">
							{% for adr in adress %}


								<div class="mb-3">
									<label for="varos_id" class="form-label font-light">Település</label>
									<select class="form-select" name="varos" id="varos">
										{% for varos in varosok %}
											{% if varos.id == adr.varos_id %}
												<option value="{{varos.id}}" selected>{{varos.varosneve}}</option>
											{% else %}
												<option value="{{varos.id}}">{{varos.varosneve}}</option>
											{% endif %}
										{% endfor %}
									</select>

								</div>

								<div>
									<label for="telefonszam" class="form-label font-light">Telefonszám</label>
									<input type="number" class="form-control" name="telefonszam" id="telefonszam" value="{{adr.telefonszam}}" required>
								</div>

								<div class="mb-3">
									<label for="cim" class="form-label font-light">Teljes cím</label>
									<input type="text" class="form-control" name="cim" id="cim" value="{{adr.cim}}" required>
								</div>

								<div class="modal-footer pt-0 text-end d-block">
									<button type="button" class="btn bg-secondary text-white rounded-1 modal-close-button" data-bs-dismiss="modal">Vissza</button>
									<button type="submit" class="btn btn-solid-default rounded-1" name="save">Mentés</button>
								</div>
							{% endfor %}
						</form>


					</div>

				</div>
			</div>
		</div>
		<!-- Add Address Modal End -->
		<div>
			<label for="iranyitoszam" class="form-label font-light">Irányítószám</label>
			<input type="number" class="form-control" name="iranyitoszam" id="iranyitoszam" value="{{adr.iranyitoszam}}">
		</div>


		<!-- Comfirm Delete Modal Start -->
		<div class="modal delete-account-modal fade" id="deleteModal">
			<div class="modal-dialog modal-dialog-centered">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
					</div>
					<div class="modal-body pb-3 text-center mt-4">
						<h4>Biztos törölni szeretné a fiókját?</h4>
					</div>
					<form action="/profilDelete" method="POST">

						<div class="d-flex pt-5 modal-content">


							<div class="modal-footer d-block text-center mb-4">
								<a href="openDelete" class="btn btn-solid-default btn-sm fw-bold rounded">Igen törlöm</a>


							</div>
						</div>
					</form>

				</div>
			</div>
		</div>


